<ListView
	x:Class="OneQuick.Controls.ListViewX" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OneQuick.Controls" 
	Name="MainListView"
	PreviewKeyDown="ListView_PreviewKeyDown"
	PreviewMouseDown="ListView_PreviewMouseDown"
	ButtonBase.Click="GridViewColumnHeaderClicked">
    <FrameworkElement.ContextMenu>
        <ContextMenu
			DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
            <MenuItem
				Header="Add"
				Click="AddItem" />
            <MenuItem
				Header="Remove"
				IsEnabled="{Binding HasSelected}"
				Click="DeleteSelectedItems" />
            <Separator />
            <MenuItem
				Header="SelectAll"
				IsEnabled="{Binding HasItems}"
				Click="SelectAll" />
        </ContextMenu>
    </FrameworkElement.ContextMenu>
</ListView>
